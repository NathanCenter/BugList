@model IEnumerable<bugList.Models.ProjectList>

@{
    ViewData["Title"] = "ProjectListPage";

}

<h1>ProjectListPage</h1>
<p>
    <a asp-action="Create">Create New</a>
    <input type="submit" onclick="location.href='@Url.Action("Create", "BugType")'" value="Create bug type" />
</p>
<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProgrammingLangueage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProgrammingLangueage)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProjectName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new {  id=item.Id  }) |
                    @Html.ActionLink("Details", "Details", new {  id=item.Id   }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.Id })

                </td>

            </tr>

        }
    </tbody>
</table>
