@model bugList.Models.BugProjectViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Bug</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">

                <input asp-for="bug.Id" class="form-control" type="hidden" />
                <span asp-validation-for="bug.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="bug.Description" class="control-label"></label>
                <input asp-for="bug.Description" class="form-control" />
                <span asp-validation-for="bug.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="bug.Line" class="control-label"></label>
                <input asp-for="bug.Line" class="form-control" />
                <span asp-validation-for="bug.Line" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="bug.Solved" class="control-label"></label>
                <input asp-for="bug.Solved" class="form-control" />
                <span asp-validation-for="bug.Solved" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input asp-for="bug.projectId" class="form-control" type="hidden" />
                <span asp-validation-for="bug.projectId" class="text-danger"></span>
            </div>
            <label asp-for="bug.BugType" class="control-label"></label>

            <div class="form-group">
                <select asp-for="bug.bugTypeId" name="bug.bugTypeId">
                    @foreach (BugType bugType in Model.bugTypes)
                    {

                        <option value="@bugType.Id">@bugType.bugType</option>


                    }
                </select>

            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <input type="submit" value="cancel" onclick="location.href='@Url.Action("Index", "ProjectList")'" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
