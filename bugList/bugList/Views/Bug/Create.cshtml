@model bugList.Models.Bug

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Bug</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Line" class="control-label"></label>
                <input asp-for="Line" class="form-control" />
                <span asp-validation-for="Line" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Solved" class="control-label"></label>
                <input asp-for="Solved" class="form-control" />
                <span asp-validation-for="Solved" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="projectId" class="control-label"></label>
                <select asp-for="projectId" >
                    <option value="1">buglist </option>
                    <option value="2">pizza app</option>
                     <option value="3">calculator</option>
                      <option value="4">qr code poll</option>
                        </select>
            </div>
      
    
             <div class="form-group">
               
                <label asp-for="BugType" class="control-label"></label>
                <select asp-for="BugType.Id" >

                    <option value="1">forloop </option>
                    <option value="2">sntax error</option>
                     <option value="3">Datebase</option>
                        </select>
                
                <span asp-validation-for="BugType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                         <input type='submit' value='Cancel' name='action'onclick="location.href='@Url.Action("Index", "ProjectList")'" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
